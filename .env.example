# App
VITE_APP_NAME=LegalAI Chat
VITE_APP_URL=http://localhost:3000

# Authentication
VITE_AUTH_COOKIE_NAME=legal_ai_session
VITE_AUTH_TOKEN_NAME=legal_ai_token
VITE_AUTH_REFRESH_TOKEN_NAME=legal_ai_refresh

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MONITORING=false

# Supabase Configuration
VITE_SUPABASE_URL=your-project-url
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_SUPABASE_REDIRECT_URL=http://localhost:3000/confirm-email
VITE_SUPABASE_CALLBACK_URL=http://localhost:3000/auth/callback

# Environment
VITE_NODE_ENV=development

# Security
VITE_CSRF_COOKIE_NAME=XSRF-TOKEN
VITE_CSRF_HEADER_NAME=X-XSRF-TOKEN

